<link rel="stylesheet" href="/styles/burgermenu.css">
<link rel="stylesheet" href="/styles/electionmap.css">

<div class = "electionmap" id="electionmap">

    <div id="activity" class="activity"></div>
    <script src="/indexJs/utils.js"></script>
    <script src="/base/Particle.js"></script>
    <script src="/electionRessource/Map.js"></script>
    <script src="/base/CanvasManagerBase.js"></script>
    <script src="/electionRessource/CanvasManagerElection.js"></script>
    <script src="/base/ParticleSystemBase.js"></script>
    <script src="/electionRessource/ParticleSystemElection.js"></script>
    <script src="/electionRessource/DataSet.js"></script>
    <script src="/base/SimulationBase.js"></script>

    <div id="burgerMenu" class="burger-menu collapsed">
        <button onclick="MenuElection.toggleMenu()">☰</button>
        <button id="pauseButton" onclick="MenuElection.pause()">❙❙</button>
        <button onclick="SimulationElection.resetData()">↺</button>
        <div class="menu-content" id="menuContent" style="display: none;">
            <div class="input-group">
                <label for="nb_particules">Nombre de particules par étape:</label>
                <input type="number" id="nb_particules" value="100" min="0">
            </div>
            <div class="modeDiv">
                <label style="flex-grow: 2" for="mode">Mode :</label>
                <div class="modeDivDiv">
                    <input class="modeRadio" type="radio" name="mode" id="maxVote" value="maxVote">
                    <label class ="modeLabel" for="maxVote">Vote maximum par ville</label>
                </div>
                <div class="modeDivDiv">
                    <input class="modeRadio"  type="radio" name="mode" id="allVille" value="allVille">
                    <label class ="modeLabel"  for="allVille">Voir toutes les villes</label>
                </div>
                <div class="modeDivDiv">
                    <input class="modeRadio"  type="radio" name="mode" id="perCandidate" value="perCandidate">
                    <label class ="modeLabel"  for="perCandidate">Afficher les votes par candidats</label>
                </div>

            </div>
            <div class="input-group">
                <select size="1" id="year_perCandidate">
                    <option value="0">1995</option>
                    <option value="2">2002</option>
                    <option value="4">2007</option>
                    <option value="6">2012</option>
                    <option value="8">2017</option>
                    <option value="10">2022</option>
                </select>
                <div>
                    <label id="currendCandidate" class="currentCandidate"></label>
                </div>
            </div>
            <div>
                <img src="/img/panneau_politique.png">
            </div>
    </div>
</div>
    <script src="/base/MenuClass.js"></script>
    <script src="/electionRessource/MenuElection.js"></script>
    <script src="/electionRessource/SimulationElection.js"></script>
    <script src="/electionRessource/mainElection.js"></script>


</div>