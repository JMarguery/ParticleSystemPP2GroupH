<link rel="stylesheet" href="/styles/burgermenu.css">
<link rel="stylesheet" href="/styles/firework.css">
    <div class = "firework" id="firework">
        <div id="activity" class ="activity"></div>
        <script src="/indexJs/utils.js"></script>
        <script src="/base/Particle.js"></script>
        <script src="/physicRessource/ParticlePhysic.js"></script>
        <script src="/base/ParticleTrail.js"></script>
        <script src="/fireworkRessource/ParticleFirework.js"></script>
        <script src="/fireworkRessource/ParticleFireworkOldTrail.js"></script>
        <script src="/base/CanvasManagerBase.js"></script>
        <script src="/fireworkRessource/canvasManagerFirework.js"></script>
        <script src="/base/ParticleSystemBase.js"></script>
        <script src="/fireworkRessource/ParticleSystemFirework.js"></script>
        <div id="burgerMenu" class="burger-menu collapsed">
            <button onclick="MenuFirework.toggleMenu()">☰</button>
            <button id="pauseButton" onclick="MenuFirework.pause()">❙❙</button>
            <button onclick="SimulationFirework.restartSim()">↺</button>
            <div class="menu-content" id="menuContent" style="display: none;">
                <div class="input-group">
                    <label for="nb_particules">Nombre de particules:</label>
                    <input type="number" id="nb_particules" value="10" min="0">
                </div>
                <div class="input-group">
                    <label for="radiusParticles">Rayon des particules:</label>
                    <input type="number" id="radiusParticles" value="5" step="0.1" min="0">
                </div>
                <div class="input-group">
                    <label for="dureeDeVieMini">Durée de vie min:</label>
                    <input type="number" id="dureeDeVieMini" value="100" min="1">
                </div>
                <div class="input-group">
                    <label for="dureeDeVieMaxi">Durée de vie max:</label>
                    <input type="number" id="dureeDeVieMaxi" value="300" min="1">
                </div>
                <div class="input-group">
                    <label for="speedFactor">Multiplicateur de Vitesse:</label>
                    <input type="number" id="speedFactor" value="1" min="0">
                </div>

                <div class="input-group">
                    <label for="minSpeedY">Vitesse Y minimum : </label>
                    <input type="number" id="minSpeedY" value="-2" min="-1" step="0.01">
                </div>

                <div class="input-group">
                    <label for="maxSpeedY">Vitesse Y maximum : </label>
                    <input type="number" id="maxSpeedY" value="-3" min="-1" step="0.01">
                </div>

                <div class="input-group">
                    <label for="splitAmmount">Nombre de particules générés : </label>
                    <input type="number" id="splitAmmount" value="12" min="0" step="1">
                </div>

                <div class="input-group">
                    <label for="vitesseAttenuationTrace">Vitesse d'atténuation:</label>
                    <input type="number" id="vitesseAttenuationTrace" value="0.1" step="0.01" min="0">
                </div>

                <div class="input-group">
                    <label for="traceMode">Système de trace n°2 : </label>
                    <input type="checkbox" id="traceMode">
                </div>


            </div>
        </div>
    </div>
    </div>
    <script src = "/base/MenuClass.js"></script>
    <script src="/fireworkRessource/MenuFirework.js"></script>
    <script src="/base/SimulationBase.js"></script>
    <script src="/fireworkRessource/SimulationFirework.js"></script>
    <script src="/fireworkRessource/main.js"></script>
</html>